{
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": false,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "declaration": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "module": "commonjs",
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}